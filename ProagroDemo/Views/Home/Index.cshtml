
<div class="jumbotron">
    <p>Demo para Proagro seguros</p>
    <p>Inicio</p>
</div>

<div class="container">
    @{ 
        if( !String.IsNullOrEmpty(ViewBag.Message) )
        {
            <div class="alert alert-warning">
                @ViewBag.Message
            </div>
        }
    }
</div>
<div class="row">
    <form name="login" id="login" method="post" action="~/Home/Login">
        <div class="form-group">
            <label>Usuario:&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input type="text" name="username" id="username"/>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" id="password"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Iniciar sesi&oacute;n" class="btn btn-default" />
        </div>
    </form>
</div>